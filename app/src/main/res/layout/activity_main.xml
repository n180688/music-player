<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ОБЫЧНАЯ ПАНЕЛЬ (видна по умолчанию) -->
    <LinearLayout
        android:id="@+id/toolbarNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:elevation="2dp"
        android:visibility="visible">

        <!-- Кнопка сортировки -->
        <Button
            android:id="@+id/buttonSort"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="Сортировка треков"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_sort"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:layout_marginEnd="4dp" />

        <!-- Кнопка режима воспроизведения  ПОЧИНИТЬ ЧТОБ НЕ ПЕРЕПРЫГИВАЛА СО СТАРТА  В ЦЕНТР-->
        <Button
            android:id="@+id/buttonPlayMode"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:contentDescription="Режим воспроизведения"
            android:drawableStart="@drawable/ic_repeat"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- ПАНЕЛЬ ПОИСКА (скрыта по умолчанию) -->
    <LinearLayout
        android:id="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:elevation="2dp"
        android:visibility="gone">

        <!-- Кнопка "Назад" -->
        <Button
            android:id="@+id/buttonSearchBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <!-- Поле ввода поиска -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Поиск..."
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionSearch" />

    </LinearLayout>


    <!-- Список треков -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTracks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- Панель управления воспроизведением (внизу) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Информация о текущем треке -->
        <TextView
            android:id="@+id/textCurrentTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите трек"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Кнопки управления -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonPrevious"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:contentDescription="Предыдущий трек"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/ic_skip_previous"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonPlay"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:contentDescription="Воспроизведение"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/ic_play"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonNext"
                android:contentDescription="Следующий трек"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/ic_skip_next"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>