<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ОБЫЧНАЯ ПАНЕЛЬ (видна по умолчанию) -->
    <LinearLayout
        android:id="@+id/toolbarNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:elevation="2dp"
        android:visibility="visible">

        <!-- Кнопка сортировки -->
        <Button
            android:id="@+id/buttonSort"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="Сортировка треков"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_sort"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:layout_marginEnd="4dp" />

        <!-- Кнопка режима воспроизведения -->
        <Button
            android:id="@+id/buttonPlayMode"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:contentDescription="Режим воспроизведения"
            android:drawableStart="@drawable/ic_arrow_forward"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- ПАНЕЛЬ ПОИСКА (скрыта по умолчанию) -->
    <LinearLayout
        android:id="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:elevation="2dp"
        android:visibility="gone">

        <!-- Кнопка "Назад" -->
        <Button
            android:id="@+id/buttonSearchBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_arrow_back"
            android:contentDescription="Назад"
            android:layout_marginEnd="8dp" />

        <!-- Поле ввода поиска -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Поиск..."
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionSearch" />

    </LinearLayout>


    <!-- Список треков -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTracks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- Мини-плеер (закреплён внизу) -->
    <LinearLayout
        android:id="@+id/miniPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <!-- Обложка-заглушка  -->
        <ImageView
            android:id="@+id/imageAlbumArt"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#CCCCCC"
            android:scaleType="centerCrop"
            android:contentDescription="Обложка альбома" />

        <!-- Информация о треке (занимает оставшееся место) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/textCurrentTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите трек"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/textCurrentArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Неизвестный артист"
                android:textSize="12sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>


        <!-- Кнопка Previous (слева от Play)-->
        <Button
            android:id="@+id/buttonPrevious"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_skip_previous"
            android:contentDescription="Предыдущий трек" />



        <!-- Кнопка Play/Pause -->
        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_play"
            android:contentDescription="Воспроизведение"
            android:layout_marginStart="4dp" />

        <!-- Кнопка Next -->
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_skip_next"
            android:contentDescription="Следующий трек"
            android:layout_marginStart="4dp" />

    </LinearLayout>


</LinearLayout>